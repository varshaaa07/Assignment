<%- include('./base/header.ejs') %>

    <div class="container">
        <div class="text-center" style="color: #FF8989;">
            <h2><strong>Fill the Details for Sign Up</strong></h2>
        </div>
        <div class="form-container">
            <form action="/add/studentdetail" method="post">

                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName">
                </div>
                <div class="mb-3">
                    <label for="lastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="lastName" name="lastName">
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" class="form-control" id="country" name="country">
                </div>
                <div class="mb-3">
                    <label for="mobileNo" class="form-label">Mobile Number</label>
                    <input type="text" class="form-control" id="mobileNo" name="mobileNo">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                </div>
                <div>
                    <!-- <a href="/" class="btn btn-color form-control">Sign Up</a> -->
                    <button type="submit" class="btn btn-color my-3">submit</button>
                    <a href="#" class="btn btn-secondary-color">Cancel</a>
                </div>
            </form>
        </div>

    </div>
    <%- include('./base/footer.ejs') %>