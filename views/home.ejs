<%- include('./base/header.ejs') %>
    <div class="container">
        <h2 class="text-center my-3" style="color:rgb(245, 105, 147);">Login OR SIGNUP</h2>
        <form class="form-container">
            <div class="mb-3">
                <label class="form-label mt-2 fw-semibold">Email address</label> <input type="email"
                    class="form-control" id="emailInput" placeholder="Enter your email address">
            </div>
            <div class="mb-3">
                <label for="passwordInput" class="form-label mt-2 fw-semibold">Password</label>
                <input type="password" class="form-control" id="passwordInput" placeholder="Enter your password">
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="gridcheck" />
                <label class="form-check-label" for="gridcheck">
                    Remember me
                </label>
            </div>
            <input type="submit" class="btn btn-color form-control mt-3" value="Login">
            <!-- New Signup Button -->
            <a href="/student/signup" class="btn btn-secondary-color form-control">Sign Up</a>
        </form>
    </div>
    <%- include('./base/footer.ejs') %>